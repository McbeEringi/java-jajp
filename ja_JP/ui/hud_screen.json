{
	"btn@common_buttons.light_content_button":{
		"size":[16,16],"ignored":"(not$touch)",
		"$default_state_border_visible":false,
		"$default_button_alpha":0,"$default_hover_alpha":0.5
	},
	"gui_btn@hud.btn":{
		"anchor_from":"bottom_right","anchor_to":"bottom_right",
		"$pressed_button_name":"button.hide_gui_all"
	},
	"doll_btn@hud.btn":{
		"anchor_from":"top_left","anchor_to":"top_left",
		"$pressed_button_name":"button.hide_paperdoll_hud",
		"bindings":[{"binding_name":"#hud_visible","binding_name_override":"#visible","binding_type":"global"}]
	},
	"item":{"type":"custom","renderer":"inventory_item_renderer","size":[16,16]},
	"hud_content":{
		"modifications":[{
			"array_name":"controls","operation":"insert_front",
			"value":[
				{"gui_btn@hud.gui_btn":{}},
				{"doll_btn@hud.doll_btn":{}},
				{"item":{
					"type":"stack_panel","anchor_from":"top_right","anchor_to":"top_right","orientation":"horizontal","size":[32,16],
					"controls":[
						//https://lukaspah.github.io/item_aux_calculator/item_id_aux.html
						{"compass@hud.item":{"property_bag":{"#item_id_aux":22609920}}},
						{"clock@hud.item":{"property_bag":{"#item_id_aux":22740992}}}
					],
					"bindings":[{"binding_name":"#hud_visible","binding_name_override":"#visible","binding_type":"global"}]
				}}
			]
		}]
	}
}
