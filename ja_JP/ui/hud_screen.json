{
	"namespace": "hud",

	"hidden_button@common_buttons.light_content_button":{
		"size": [ 16, 16 ],
		"ignored": "(not $touch)",
		"$default_state_border_visible": false,
		"$default_button_alpha": 0,
		"$default_hover_alpha": 0.5
	},
	"gui_button@hud.hidden_button":{
		"anchor_from": "bottom_right",
		"anchor_to": "bottom_right",
		"$pressed_button_name": "button.hide_gui_all"
	},
	"doll_button@hud.hidden_button":{
		"anchor_from": "top_left",
		"anchor_to": "top_left",
		"$pressed_button_name": "button.hide_paperdoll_hud",
		"bindings": [
			{
				"binding_name": "#hud_visible",
				"binding_name_override": "#visible",
				"binding_type": "global"
			}
		]
	},

	"hud_content": {
		"type": "panel",
		"$hud_player_rend_desktop_offset|default": [ 15, 15 ],
		"variables": [
			{
				"requires": "($is_holographic and not $is_living_room_mode)",
				"$hud_player_rend_desktop_offset": [ 100, 50 ]
			}
		],
		"controls": [
			{ "gui_button@hud.gui_button": {} },
			{ "doll_button@hud.doll_button": {} },
			{ "root_panel@hud.root_panel": {} },
			{
				"camera_renderer@camera_renderer": {
					"ignored": "(not $education_edition)"
				}
			},
			{ "inventory_selected_icon_button@common.inventory_selected_icon_button": {} }
		]
	}
}
